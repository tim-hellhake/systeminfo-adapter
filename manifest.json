{
  "id": "systeminfo-adapter",
  "short_name": "Systeminfo",
  "name": "Systeminfo",
  "version": "1.11.0",
  "description": "Get stats of the system",
  "author": "Tim Hellhake",
  "homepage_url": "https://github.com/tim-hellhake/systeminfo-adapter#readme",
  "license": "MPL-2.0",
  "manifest_version": 1,
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "primary_type": "adapter",
      "strict_min_version": "0.10.0"
    }
  },
  "options": {
    "default": {
      "pollInterval": 1,
      "features": {
        "cpu": true,
        "ram": true,
        "disk": true,
        "network": true,
        "system": true,
        "battery": true
      }
    },
    "schema": {
      "type": "object",
      "required": [],
      "properties": {
        "pollInterval": {
          "type": "integer",
          "title": "The time in seconds after which the data is refreshed"
        },
        "features": {
          "type": "object",
          "title": "Features",
          "properties": {
            "cpu": {
              "type": "boolean",
              "title": "Enable the cpu metrics"
            },
            "ram": {
              "type": "boolean",
              "title": "Enable the ram metrics"
            },
            "disk": {
              "type": "boolean",
              "title": "Enable the disk metrics"
            },
            "network": {
              "type": "boolean",
              "title": "Enable the network metrics"
            },
            "system": {
              "type": "boolean",
              "title": "Enable the uptime metric"
            },
            "battery": {
              "type": "boolean",
              "title": "Enable the battery metrics"
            }
          }
        }
      }
    }
  }
}
